<div class="row">
  <div class="col-md-3">
    <%= label_tag "firebase_app_url" %>
    <%= text_field_tag "firebase_app_url", nil, :size => 35 %>
    <p id="firebase_app_required" class="error-message"></p>
  </div>
</div>

<%= form_tag "/uploads", id: "new_upload", class: "dropzone" do %>
  <div class="fallback">
    <%= file_field_tag :file %>
    <%= submit_tag "Upload" %>
  </div>
<% end %>

<%= render "previews" %>

<div class="modal"></div>
